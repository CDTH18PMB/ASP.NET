@model IEnumerable<CinemaWeb.Areas.Admin.Models.PhimModel>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center"> Quản lý phim </h2>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenPhim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaoDien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trailer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThoiLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuocGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theloai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKhoiChieu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenPhim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poster)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaoDien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trailer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuocGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.theloai.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKhoiChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaPhim">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaPhim">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaPhim">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
