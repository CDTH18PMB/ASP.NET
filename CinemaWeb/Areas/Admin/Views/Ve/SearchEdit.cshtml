@model CinemaWeb.Areas.Admin.Models.VeModel

@{
    ViewData["Title"] = "Edit";
}
<div class="col-md-4">
    <div class="card">
        <div class="card-header">
            <h3 style="text-align:center">Chỉnh sửa vé</h3>
        </div>
        <div class="card-body col-md-12">
            <form asp-action="@(ViewBag.TrangThaiGhe != null ?"Edit":"SearchEdit")" asp-route-id="@(ViewContext.RouteData.Values["id"])">
                <!--chọn phim tìm lịch chiếu-->
                <div class="form-group">
                    <label asp-for="Phim" class="control-label"></label>
                    <select asp-for="Phim" class="form-control" asp-items="ViewBag.Phim"></select>
                    <span asp-validation-for="Phim" class="text-danger"></span>
                </div>
                <!--tìm được lịch chiếu chọn suất tìm ghế-->
                @if (ViewBag.Suat != null)
                {
                    <div class="form-group">
                        <label asp-for="Suat" class="control-label"></label>
                        <select asp-for="Suat" class="form-control" asp-items="ViewBag.Suat"></select>
                        <span asp-validation-for="Suat" class="text-danger"></span>
                    </div>
                }
                <!--tìm được sẽ có thể cập nhật-->
                @if (ViewBag.TrangThaiGhe != null)
                {
                    <div class="form-group">
                        <label asp-for="Phong" class="control-label"></label>
                        <select asp-for="Phong" class="form-control" asp-items="ViewBag.Phong"></select>
                        <span asp-validation-for="Phong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ghe" class="control-label"></label>
                        <select asp-for="Ghe" class="form-control" asp-items="ViewBag.TrangThaiGhe"></select>
                        <span asp-validation-for="Ghe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GiaVe" class="control-label"></label>
                        <input asp-for="GiaVe" class="form-control"/>
                        <span asp-validation-for="GiaVe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="SearchEdit" asp-route-id="@(ViewContext.RouteData.Values["id"])" class="btn btn-secondary col-md-12">Quay lại</a>
                    </div>
                    <!--thông tin còn lại-->
                    <input type="hidden" asp-for="MaVe" />
                    <input type="hidden" asp-for="User" />
                    <input type="hidden" asp-for="NgayMua" />
                    <input type="hidden" asp-for="TrangThai" />
                }
                <div class="form-group">
                    <button style="margin-top:10px" class="btn btn-primary col-md-12">@(ViewBag.TrangThaiGhe != null ?"Cập nhật":"Tìm")</button>
                </div>
            </form>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary col-md-12">Trở Lại</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
