@{
}
@model CinemaWeb.Areas.Admin.Models.VeModel
@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.MaVe" onsubmit="return AddOrEdit(this)" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*chọn*@
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaPhim" class="control-label"></label>
                        <select asp-for="MaPhim" class="form-control" asp-items="ViewBag.MaPhim"></select>
                        <span asp-validation-for="MaPhim" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SuatChieu" class="control-label"></label>
                        <select asp-for="SuatChieu" class="form-control" asp-items="ViewBag.SuatChieu"></select>
                        <span asp-validation-for="SuatChieu" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaPhong" class="control-label"></label>
                        <select asp-for="MaPhong" class="form-control" asp-items="ViewBag.MaPhong"></select>
                        <span asp-validation-for="MaPhong" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaGhe" class="control-label"></label>
                        <select asp-for="MaGhe" class="form-control" asp-items="ViewBag.MaGhe"></select>
                        <span asp-validation-for="MaGhe" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*Thay đổi*@
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Gia" class="control-label"></label>
                        <input asp-for="Gia" class="form-control" />
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*Tìm*@
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="NguoiMua" class="control-label"></label>
                        <select asp-for="NguoiMua" class="form-control" asp-items="ViewBag.NguoiMua"></select>
                        <span asp-validation-for="NguoiMua" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*Tự điền*@
            <input type="hidden" asp-for="MaVe" />
            <input type="hidden" asp-for="NgayMua" />
            @*button*@
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-success" />
            <button  class="btn btn-outline-secondary" data-dismiss="modal">Back to List</button>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
