@model CinemaWeb.Areas.Admin.Models.LichChieuModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Lịch Chiếu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaLichChieu" />
            <div class="form-group">
                <label asp-for="NgayChieu" class="control-label">Ngày Chiếu</label>
                <input asp-for="NgayChieu" class="form-control" />
                <span asp-validation-for="NgayChieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGian" class="control-label">Thời Gian</label>
                <input asp-for="ThoiGian" class="form-control" />
                <span asp-validation-for="ThoiGian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhim" class="control-label">Mã Phim</label>
                <select asp-for="MaPhim" class="form-control" asp-items="ViewBag.MaPhim"></select>
                <span asp-validation-for="MaPhim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhong" class="control-label">Mã Phòng</label>
                <select asp-for="MaPhong" class="form-control" asp-items="ViewBag.MaPhong"></select>
                <span asp-validation-for="MaPhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoGheTrong" class="control-label">Số Ghế Trống</label>
                <input asp-for="SoGheTrong" class="form-control" />
                <span asp-validation-for="SoGheTrong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Details" asp-route-id="@Model.MaLichChieu">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
