@model CinemaWeb.Areas.Admin.Models.GheModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Ghế</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaGhe" class="control-label">Mã Ghế</label>
                <input asp-for="MaGhe" class="form-control" />
                <span asp-validation-for="MaGhe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhong" class="control-label">Mã Phòng</label>
                <select asp-for="MaPhong" class ="form-control" asp-items="ViewBag.MaPhong"></select>
            </div>
            <div class="form-group">
                <label asp-for="LichChieu" class="control-label">Lịch Chiếu</label>
                <select asp-for="LichChieu" class ="form-control" asp-items="ViewBag.LichChieu"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">Trạng Thái</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
