@model CinemaWeb.Areas.Admin.Models.PhongChieuModel

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h4 style="text-align:center">@(ViewContext.RouteData.Values["id"] != null ?"chỉnh sửa phòng chiếu":"thêm phòng chiếu mới")</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")"
                      asp-route-id="@(ViewContext.RouteData.Values["id"] != null ?ViewContext.RouteData.Values["id"]:"")">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @{
                        if (ViewContext.RouteData.Values["id"] != null)
                        {
                            <input type="hidden" asp-for="MaPhong" />
                        }
                    }
                    <input type="hidden" asp-for="TrangThai" value="true" />
                    <div class="form-group">
                        <label asp-for="SoGhe" class="control-label"></label>
                        <select asp-for="SoGhe" class="form-control">
                            <option value="180">180</option>
                        </select>
                        <span asp-validation-for="SoGhe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@(ViewContext.RouteData.Values["id"] != null ?"Cập nhật":"Thêm mới")" class="btn btn-primary col-md-12" />
                    </div>
                </form>
                @{
                    if (ViewContext.RouteData.Values["id"] != null)
                    {
                        <p>
                            <a asp-action="Index" asp-route-id="" class="btn btn-secondary col-md-12">Trở về thêm mới</a>
                        </p>
                    }
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
