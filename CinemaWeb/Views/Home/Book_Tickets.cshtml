@{
}
<div class='container' style='margin-top: 150px'>
    <form name="bookTicket" action="#" method="post">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#movie">CHỌN PHIM</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#seat">CHỌN GHẾ</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#confirm">XÁC NHẬN</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <!--tab chọn phim + suất chiếu-->
        <div id="movie" class="container tab-pane active">
            <br>
            <div class='row' style='margin-bottom: 100px;'>
                <!--Chọn phim-->
                <div class='col-md-6'>
                    <div style='background-color: orangered; color:white; text-align: center; padding:5px; font-size: 20px;'>
                        CHỌN PHIM
                    </div>
                        @{
                            int dsPhim = 3;
                            for (int i = 1; i <= dsPhim; i++)
                            {
                                <div style='border: 1px solid gainsboro;'>
                                    <label id="Phim_@i" onclick="ChooseMovie(@i, @dsPhim)">
                                        <div class='row' style='padding:10px'>
                                            <div class='col-sm-4'>
                                                <img src="~/user/images/1.jpg" alt="" width='100%' height='100%'>
                                            </div>
                                            <div class='col-sm-8'>
                                                FROZEN @i
                                                <input type="type" name="Phim_@i" value="FROZEN_@i" hidden />
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            }
                        }
                </div>

                <!--Chọn suất-->
                <div class='col-md-6'>
                    <div style='background-color: orangered; color:white; text-align: center; padding:5px; font-size: 20px;'>
                        CHỌN SUẤT
                    </div>

                    <div style='border: 1px solid gainsboro;'>
                        <div class='row'>
                                <!--Ngày chiếu-->
                                <div class='col-sm-3'>
                                    <div style='text-align: center; padding-top: 20px;'>27/11/2020</div>
                                    <input type="type" name="NgayChieu" value="29/11/2020" hidden />
                                </div>
                                <div class='col-sm-9'>
                                    <div class='row'>
                                        @{
                                            int dsSuatChieu = 4;
                                            for (int i = 1; i <= dsSuatChieu; i++)
                                            {
                                                <!--Phòng + giờ + số ghế trống-->
                                                <div class='col-sm-4' style='margin:5px 0; text-align: center; font-size: 12px;'>
                                                    <label id="Suat_@i" style="width:100%" onclick="ChooseMovieSchedule(@i, @dsSuatChieu)">
                                                        <!--Phòng-->
                                                        <div style='border: 1px solid gainsboro; padding:3px'>Phòng @i</div>
                                                        <input type="type" name="Phong_@i" value="@i" hidden />

                                                        <!--Thời gian-->
                                                        <div style='border: 1px solid gainsboro; padding:3px; font-weight: bold; font-size: 14px'>@i:@dsSuatChieu</div>
                                                        <input type="type" name="ThoiGian_@i" value="@i:@dsSuatChieu" hidden />

                                                        <!--số ghế-->
                                                        <div style='border: 1px solid gainsboro;padding:3px'>180/180 Ghế</div>
                                                    </label>
                                                </div>
                                            } }
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="seat" class="container tab-pane fade">
            <br>
            <div style='background-color: white; border: 10px solid orangered; padding: 20px 0 20px 0; margin-bottom: 100px;'>
                <!--màn hình-->
                <div style='background-color: gray; margin:auto; padding: 10px; width:85%; text-align: center; color: white;'>MÀN HÌNH</div>
                <!--Ghế-->
                <div class='row'>
                    <div class='col-sm-1'>
                        <div style='margin-top: 50px; text-align:right'>
                            @{
                                char Word;
                                for (int i = 65; i < 75; i++)
                                {
                                    Word = (char)i;
                                    <button style="background:none; border:none; color:black;margin-bottom:4px; width: 35px; height: 35px" disabled>@Word</button>
                                }
                            }
                        </div>
                    </div>
                    <div class='col-sm-10'>
                        <div style='margin: 50px 0;'>
                            <div class='row'>
                                <div class='col-sm-3' style="padding-left: 50px">
                                    @{
                                        int row = 10; int col = 4;
                                        for (int i = 1; i <= row; i++)
                                        {
                                            Word = (char)(i + 64);
                                            for (int j = 1; j <= col; j++)
                                            {
                                                <button id="@Word@j" type="button" style='margin-bottom:4px; width: 35px; height: 35px; background-color: white' value="0" onclick="ChooseSeat('@Word', '@j@Word', @j, @col)">@j</button>
                                                <input type="text" name="@j@Word@j" value='@Word@j' hidden />
                                            }
                                        }
                                    }
                                </div>
                                <div class='col-sm-6' style="padding-left:25px">
                                    @{
                                        col = 14;
                                        for (int i = 1; i <= row; i++)
                                        {
                                            Word = (char)(i + 64);
                                            for (int j = 5; j <= col; j++)
                                            {
                                                <button id="@Word@j" type="button" style='margin-bottom:4px; width: 35px; height: 35px; background-color: white' onclick="ChooseSeat('@Word', '@j@Word', @j, @col)">@j</button>
                                                <input type="text" name="@j@Word@j" value='@Word@j' hidden />
                                            }
                                        }
                                    }
                                </div>
                                <div class='col-sm-3' style="padding-right: 50px">
                                    @{
                                        col = 18;
                                        for (int i = 1; i <= row; i++)
                                        {
                                            Word = (char)(i + 64);
                                            for (int j = 15; j <= col; j++)
                                            {
                                                <button id="@Word@j" type="button" style='margin-bottom:4px; width: 35px; height: 35px; background-color: white' onclick="ChooseSeat('@Word', '@j@Word', @j, @col)">@j</button>
                                                <input type="text" name="@j@Word@j" value='@Word@j' hidden />
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class='col-sm-1'>
                        <div style='margin-top: 50px; text-align:left'>
                            @for (int i = 65; i < 75; i++)
                            {
                                Word = (char)i;
                                <button style="background:none; border:none; color:black;margin-bottom:4px; width: 35px; height: 35px" disabled>@Word</button>
                            }
                        </div>
                    </div>
                </div>

                <!--Nút chọn lại + thông báo ghế-->
                <center>
                    <span style="float:left; margin-left:30px">
                        <button type="button" class="btn btn-outline-danger" onclick="Reset()">Chọn lại</button>
                    </span>

                    <span>
                        <div class="btn-group">
                            <!--Ghế đang chọn-->
                            <button style="width:30px; height:30px; background-color:black; border: 1px solid black" disabled></button>&nbsp;
                            <button style="height: 30px; background-color:white; color:black; border: none" disabled>Ghế đang chọn</button>

                            <!--Ghế có thể chọn-->
                            <button style="width:30px; height:30px; background-color:white;border: 1px solid black" disabled></button>&nbsp;
                            <button style="height: 30px; background-color:white; color:black; border: none" disabled>Ghế có thể chọn</button>

                            <!--Ghế đã mua-->
                            <button style="width:30px; height:30px; background-color: forestgreen;border: 1px solid black"; margin-left:30px" disabled></button>&nbsp;
                            <button style="height: 30px; background-color:white; color:black; border: none" disabled>Ghế đã mua</button>
                        </div>
                    </span>
                </center>
            </div>
        </div>

        <div id="confirm" class="container tab-pane fade">
            <br>
            <div style='background-color: white; border: 10px solid orangered; padding: 20px 0 20px 0; margin-bottom: 100px;'>
                <div style='width:50%; margin:auto'>
                    <!--PHIM-->
                    <div class='row' style='margin-bottom: 15px;'>
                        <div class='col-sm-4'>
                            <h5>PHIM</h5>
                        </div>
                        <div class='col-sm-8'>
                            <input id="Phim" class="form-control" disabled style='margin-left: 50px; background-color:white'>
                        </div>
                    </div>

                    <!--SUẤT CHIẾU-->
                    <div class='row' style='margin-bottom: 15px;'>
                        <div class='col-sm-4'>
                            <h5>SUẤT CHIẾU</h5>
                        </div>
                        <div class='col-sm-8'>
                            <input id="SuatChieu" class="form-control" disabled style='margin-left: 50px; background-color:white'>
                        </div>
                    </div>

                    <!--PHÒNG-->
                    <div class='row' style='margin-bottom: 15px;'>
                        <div class='col-sm-4'>
                            <h5>PHÒNG</h5>
                        </div>
                        <div class='col-sm-8'>
                            <input id="Phong" class="form-control" disabled style='margin-left: 50px; background-color:white'>
                        </div>
                    </div>

                    <!--GHẾ-->
                    <div class='row' style='margin-bottom: 40px;'>
                        <div class='col-sm-4'>
                            <h5>GHẾ</h5>
                        </div>
                        <div class='col-sm-8'>
                            <input id="Ghe" class="form-control" disabled style='margin-left: 50px; background-color:white'>
                        </div>
                    </div>

                    <!--Thành tiền-->
                    <div class='row' style='margin-bottom: 40px;'>
                        <div class='col-sm-4'>
                            <h5>TỔNG TIỀN</h5>
                        </div>
                        <div class='col-sm-8'>
                            <input id="TongTien" class="form-control" disabled style='margin-left: 50px; background-color:white; font-weight:bold'>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='col-sm-6'>
                            <a asp-controller="Home" asp-action="Book_Tickets"><button class='btn btn-warning' style='width:100%'>QUAY LẠI</button></a>
                        </div>
                        <div class='col-sm-6'>
                            <button type="button" class='btn btn-success' style='width:100%'>THANH TOÁN</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
</div>
